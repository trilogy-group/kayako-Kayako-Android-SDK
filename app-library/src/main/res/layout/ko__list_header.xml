<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ko__list_item_header_background_color"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:orientation="vertical">

    <com.kayako.sdk.android.k5.common.view.RegularTextView
        android:id="@+id/ko__list_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="@color/ko__list_item_header_text_color"
        android:textSize="16sp"
        tools:text="Getting Started" />

    <include layout="@layout/ko__include_separator"/>

</LinearLayout>